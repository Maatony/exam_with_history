@using ExamOrientation.Models
@model List<User>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add new user</title>
</head>
<body>
    @Html.ActionLink("Report new thing", "Index", "Home")

    @if (Model.Count != 0)
    {
        <table>
            <tr>
                <th>Name</th>
            </tr>
        @foreach (User user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                </tr>
            }
        </table>
    }

    <form method="post" @Url.Action("AddUserOpen", "Home")>
        <label for="AddUser">New User's Name</label><br />
        <input type="text" id="AddUser" name="Name" /><br />
        <input type="submit" id="AddUser" value="Add New User"/>
    </form>

</body>
</html>
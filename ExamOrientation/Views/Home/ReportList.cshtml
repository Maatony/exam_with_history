@using ExamOrientation.Models

@model List<Report>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>All Reports</title>
</head>
<body>
    <h1>Reporter App</h1>

    @Html.ActionLink("Report new thing", "Index", "Home")

    @if (Model.Count != 0)
    {
        <table>
            <tr>
                <th>Report ID</th>
                <th>Reporter</th>
                <th>Manufacturer</th>
                <th>Serial Number</th>
                <th>Description</th>
                <th>Date</th>
                <th>Handler</th>
            </tr>
        @foreach (Report report in Model)
            {
                <tr>
                    <td>@report.Id</td>
                    <td>@report.Reporter.Name</td>
                    <td>@report.Manufacturer</td>
                    <td>@report.SerialNumber</td>
                    <td>@report.Description</td>
                    <td>@report.Date</td>
                    <td>@report.Handler</td>
                </tr>
            }
        </table>
    }
    else
    {
        <h2>No Reports!</h2>
    }

</body>
</html>